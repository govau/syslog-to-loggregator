#!/bin/bash
set -eu

JOB_NAME=syslog_to_loggregator
RUN_DIR=/var/vcap/sys/run/${JOB_NAME}
LOG_DIR=/var/vcap/sys/log/${JOB_NAME}
JOB_DIR=/var/vcap/jobs/${JOB_NAME}
PIDFILE=$RUN_DIR/pid
mkdir -p $LOG_DIR
exec >>$LOG_DIR/${JOB_NAME}.ctl.log 2>&1

case $1 in
  start)
    mkdir -p $RUN_DIR

    if [[ -f $PIDFILE ]]; then
      PID=$(head -1 $PIDFILE)
      test -n "$PID" && test -e /proc/$PID && exit 1
      rm -f $PIDFILE
    fi

    echo "$(date) starting up ${JOB_NAME}"

    PATH="$PATH:/var/vcap/packages/syslog_to_loggregator/bin"

    export LD_LIBRARY_PATH PATH

    source ${JOB_DIR}/data/properties.sh

    echo "$(date) syslog_to_loggregator starting up (pid $$)"
    echo $$ > $PIDFILE
    exec chpst syslog_to_loggregator \
      >>  $LOG_DIR/$JOB_NAME.stdout.log \
      2>> $LOG_DIR/$JOB_NAME.stderr.log
    ;;

  stop)
    echo "$(date) shutting down ${JOB_NAME}"
    PID=$(head -1 $PIDFILE)
    if [[ -n "$PID" ]]; then
      kill $PID || true
      while [ -e /proc/$PID ]; do sleep 0.1; done
    fi
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: ctl {start|stop}"
    exit 1
    ;;
esac
exit 0
